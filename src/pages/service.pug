  +header()
  +b.heading_service
    +e.inner.inner
      +e.row
        +e.content
          +b.breadcrumb
            +e.home
            +e.list
              +e.A.link(href="/") Главная 
              +e.A.link(href="/") Гигиена
              +e.P.link Комплексная профессональная гигиена
          +e.P.title.display-1 Комплексная профессиональная гигиена полости рта
